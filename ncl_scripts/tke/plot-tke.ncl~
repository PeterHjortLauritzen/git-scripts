load "$NCARG_ROOT/lib/ncarg/nclscripts/csm/gsn_code.ncl"
load "$NCARG_ROOT/lib/ncarg/nclscripts/csm/gsn_csm.ncl"
load "$NCARG_ROOT/lib/ncarg/nclscripts/csm/contributed.ncl"
;
;  read spectra.nc  (computed from history output with ke.ncl)
;  plot from spectra.nc with ke2.ncl
;

begin
  lcompensated = False
  ltsu = True
;  case = "LF_versus_RK5"
;  fnames =  (/"CAMTRUNK_LF/CAMTRUNK_LF_tke_250hPa.nc","CAMTRUNK_default/CAMTRUNK_default_tke_250hPa.nc"/)
;  xi=(/0,1/)
;  legends=(/"Leapfrog","RK5"/)
;   titletxt = "CESM1.5 CAM4-SE AMIP"

;  case = "Lagrange_versus_Eul"
;  fnames =  (/"CAMTRUNK_default/CAMTRUNK_default_tke_250hPa.nc","CAMTRUNK_eul/CAMTRUNK_eul_tke_250hPa.nc"/)
;  xi=(/0,1/)
;  legends=(/"Lagrange","Eulerian"/)
;   titletxt = "CESM1.5 CAM4-SE AMIP"

;  case = "CAM4_versus_CAM5"
;  fnames =  (/"CAMTRUNK_default_CAM5/CAMTRUNK_default_CAM5_tke_250hPa.nc","CAMTRUNK_default/CAMTRUNK_default_tke_250hPa.nc"/)
;  xi=(/0,1/)
;  legends=(/"CAM5","CAM4"/)
;   titletxt = "CESM1.5 CAM4-SE AMIP"

;  case = "viscosity"
;  fnames =  (/"CAMTRUNK_nu0.5_nu_div1/CAMTRUNK_nu0.5_nu_div1_tke_250hPa-all.nc","CAMTRUNK_default/CAMTRUNK_default_tke_250hPa-all.nc","CAMTRUNK_nu0.1_nu_div0.1/CAMTRUNK_nu0.1_nu_div0.1_tke_250hPa-all.nc","ap4_default_tsu/ap4_default_tsu_tke_250hPa-all.nc"/)
;  xi=(/0,1,2,3/)
;  legends=(/"less hypervis","default","much less hypervis","tsu"/)
;   titletxt = "CESM1.5 CAM4-SE AMIP"

;  case = "tsu_ape"
;  fnames =  (/"xnew-defaults-apt3/xnew-defaults-apt3_tke_250hPa-all.nc","apt4_candidate_new_default/apt4_candidate_new_default_tke_250hPa-all.n;c","xapt5tsu_new_default/xapt5tsu_new_default_tke_250hPa-all.nc","xapt6tsu_new_default/xapt6tsu_new_default_tke_250hPa-all.nc"/)
;  xi=(/0,1,2,3/)
;  legends=(/"CAM3","CAM4","CAM5","CAM6"/)
;  titletxt = "CESM2.0 CAM-SE APE-topo"

;  case = "tsu_ape_fv"
;  fnames =  (/"apt4_old_defaults/apt4_old_defaults_tke_250hPa-all.nc","apt4_candidate_new_default/apt4_candidate_new_default_tke_250hPa-all.nc","xtsu_planetCAM4-fv/xtsu_planetCAM4-fv_tke_250hPa-all.nc"/)
;  xi=(/0,1,2/)
;  legends=(/"SE(old)","SE(new)","FV"/)
;  titletxt = "CESM2.0 CAM4 APE-topo"

;  case = "tsu_ape_new_nu_versus_old"
;  fnames =  (/"apt4_old_defaults/apt4_old_defaults_tke_250hPa-all.nc","apt4_candidate_new_default/apt4_candidate_new_default_;tke_250hPa-all.nc"/)
;  xi=(/0,1/)
;  legends=(/"SE(old)","SE(new)"/)
;  titletxt = "CESM2.0 CAM4 APE-topo"

;  case = "tsu_versus_AMIP"
;  fnames =  (/"apt4_old_defaults/apt4_old_defaults_tke_250hPa-all.nc","PHYSGRID_default/PHYSGRID_default_tke_250hPa-all.nc","ape4-notopo/ape4-n;otopo_tke_250hPa-all.nc"/)
;  xi=(/0,1,2/)
;  legends=(/"APE topo","AMIP","APE (no topo)"/)
;  titletxt = "CESM2.0 CAM4"

;  case = "topo_versus_no_topo"
;  fnames =  (/"apt4_old_defaults/apt4_old_defaults_tke_250hPa-all.nc","ape4-notopo/ape4-notopo_tke_250hPa-all.nc"/)
;  xi=(/0,1/)
;  legends=(/"APE topo","APE (no topo)"/)
;  titletxt = "CESM2.0 CAM4"

;  case = "tsu_ape_cam6_old_versus_new"
;  fnames =  (/"xold-defaults-apt6/xold-defaults-apt6_tke_250hPa-all.nc","xapt6tsu_new_default/xapt6tsu_new_default_tke_250hPa;-all.nc"/)
;  xi=(/0,1/)
;  legends=(/"SE(old)","SE(new)"/)
;  titletxt = "CESM2.0 CAM6 APE-topo"

  case = "ne240-cam3"
  fnames =  (/"ape-cam3-ne240/ape-cam3-ne240_tke_250hPa-all.nc"/)
  xi=(/0/)
  legends=(/"ne240"/)
  titletxt = "CESM2.0 CAM3 APE"

  avespc   = addfiles(fnames,"r")       ; Open netCDF files.	
  print("fnames = "+fnames)
  output_format = "pdf"
  out_fname = case



  if (lcompensated) then
    out_fname=out_fname+"_compensated"
  end if
  wks = gsn_open_wks(output_format,out_fname)

  fcnt = dimsizes(xi)
  print(fcnt)
  nlat=dimsizes(avespc[0]->spc_avg);
  print(nlat)
  cut = 120
  cutoff = nlat-cut
 print("cut-off"+cutoff)

spc =   new ( (/fcnt,cutoff/), "double")
spc = spc@_FillValue
x   = new ( (/fcnt,cutoff/), "double")
x = x@_FillValue
spc = 0.0
do i=0,fcnt-1
   fk=xi(i)
   x(i,:) = avespc[fk]->x_avg(0:cutoff-1)
   spc(i,:)=avespc[fk]->spc_avg(0:cutoff-1)
   if (lcompensated) then
     spc(i,:) = spc(i,:)*(x(i,:)^(3.))
   end if
end do




  do fk=0,fcnt-1

     tmax=nlat
    ; dont plot wave numbers above tmax
    do i=tmax,nlat-1
       spc(fk,i)=spc@_FillValue
    end do         
  end do  

  athick=4
  lthick=4

  res=True
  ;res@gsLineThicknessF = 3.0
  res@xyXStyle ="Log"
  res@xyYStyle ="Log"
  res@tmXBMinorPerMajor = 8   
  res@tmXTMinorPerMajor = 8   
  res@tmYRMinorPerMajor = 8   
  res@tmYLMinorPerMajor = 8   
  res@tmXMajorGridThicknessF = athick
  res@tmYLLabelFont = 21    ;  21 = helvetica
  res@tmXBLabelFont = 21    ;  22 = helvetica-bold 

  res@tmXBMajorThicknessF = athick
  res@tmYLMajorThicknessF = athick
  res@tmXBMinorThicknessF = athick 
  res@tmYLMinorThicknessF = athick 
  res@tmBorderThicknessF = athick
  res@tiMainString           = "Average of 30 daily instantaneous 250mb (u,v)"
;  res@tiMainString           = "Average of 200 six-hourly instantaneous 250mb (u,v)"
  res@tiXAxisString          = "Spherical Wavenumber k"
  if (lcompensated) then
    res@tiYAxisString          = "Compensated Total Kinetic Energy E(k)*k^3"
  else
    res@tiYAxisString          = "Total Kinetic Energy E(k)"
  end if
  res@gsnFrame = False
  res@xyLineThicknessF = lthick

  colors = (/"white","black","OrangeRed4","Red3",\
"red1","Red3","Red4","Blue","green",\
"OrangeRed1","OrangeRed2","OrangeRed3","OrangeRed4","DarkOrange",\
"red1","red2","red3","red4",\
"DarkTurquoise","Turquoise","Cyan","blue",\
"gold","greenyellow",\
"GoldenRod","DarkGoldenRod1","lightgoldenrod1","lightyellow","lightgoldenrodyellow","khaki1"\
/)
  gsn_define_colormap(wks, colors)

  res@xyLineColors = (/"blue","green","DarkGoldenRod1","red3","DarkTurquoise","OrangeRed4","black"/)
;  res@xyDashPatterns = (/0,1,0,1,0,1,0,1/)
  res@xyDashPattern = 0

  res@trXMinF = 1       
  res@trXMaxF = 500       
;  res@trXMaxF = 2500       
  if (lcompensated) then
    res@trYMinF = 1e1      
    res@trYMaxF = 1e6   	
  else
    res@trYMinF = 1e-6      
    res@trYMaxF = 1e4   
  end if

  plot  = gsn_xy (wks,x(:,1:cutoff-1),spc(:,1:cutoff-1),res) ; create plot
  
  xref = (/10.,300./)
  if (lcompensated)
    spc_ref = (/60000.,60000./)
  else
    spc_ref = 50*(xref/10)^(-3) ; make it 6 @ k=15
;    spc_ref = 50*(xref/10)^(-5./3.) ; make it 6 @ k=15
  end if
  polyres                  = True
  polyres@gsLineThicknessF = 2.0
  polyres@gsLineColor = "black"
  gsn_polyline(wks,plot,xref,spc_ref,polyres)              ; add polyline


  polytext = True
  polytext@txFontHeightF      = 0.02                 ; change text size
  polytext@txJust             = "CenterLeft"          ; text justification

  if (lcompensated) then
    gsn_text(wks,plot,"k^-3",30.,90000.,polytext); add text
  else
    gsn_text(wks,plot,"k^-3",80.,1.0,polytext); add text
  end if

  if (lcompensated) then
    xpos = 90.3
    ypos = 200.0
  else
    xpos = 1.3
    ypos=0.01  
  end if

;
  do fk=0,fcnt-1
    if (lcompensated) then
      xx = (/50,70/)
      ypos = ypos/1.8
    else
      xx = (/6,18/)
      ypos = ypos/3
    end if
;    xx = (/1,10/)

    yy = (/ypos,ypos/)
    polyres@gsLineThicknessF = lthick
    polyres@gsLineColor = res@xyLineColors(fk)
    gsn_polyline(wks,plot,xx,yy,polyres)              ; add polyline
    gsn_text(wks,plot,legends(fk),xpos,ypos,polytext); add text
    print(fk+" legend = "+legends(fk))
  end do 
  polytext@txJust             = "BottomCenter"          ; text justification
  if (ltsu) then
    gsn_text_ndc(wks, titletxt,.5,.805,polytext); add text
  else
    gsn_text_ndc(wks,titletxt,.5,.805,polytext); add text
  end if

  frame(wks)                                     ; now advance


;  do n1=0,tmax-1
;    spc(:,n1) = spc(:,n1)*(n1^3)
;  end do
;  res@tiYAxisString          = ":F21:Compensated Kinetic Energy"
;  res@trYMinF = 1e3
;;  res@trYMinF = 1e1
;  res@trYMaxF = 2e5   
;  plot  = gsn_xy (wks,x,spc,res) ; create plot
;  xref = (/10.,300./)
;  spc_ref = (xref^3)*100*(xref/10)^(-3) ; make it 6 @ k=15
;  polyres@gsLineThicknessF = 2.0
;  polyres@gsLineColor = "black"
;  gsn_polyline(wks,plot,xref,spc_ref,polyres)              ; add polyline
;  frame(wks)                                     ; now advance 


end
